<div class="row top-padding">
	<div class="small-12 columns" id="shows"></div>
</div>

<script type="text/template" id="storefront-item-template">
	<div class="show-box" style="background-image: url('<%%= poster_url %>'); background-size: cover;">
		<div class="content">
			<h3><%%= name %></h3>
			<p><%%= theatre %></p>
			<p>From $<%%= lowest_price %> ~</p>
		</div>
	</div>
</script>

<div id="modal" class="reveal-modal" data-reveal></div>

<script type="text/template" id="show-detail-template">
	<ul class="small-block-grid-4">
		<li><img src="<%%= img1 %>"></li>
		<li><img src="<%%= img2 %>"></li>
		<li><img src="<%%= img3 %>"></li>
	</ul>

	<h3><%%= name %></h3>
	<p><%%= theatre %></p>
	
	<%% _.each(performances, function(value) { %>
		<table class="ticket-table">
		<tr><td colspan="6"><%%= value.start_time %></td></tr>
		<%% _.each(value.tickets, function(v) { %>
			<tr>
				<td>Seat: <%%= v.seat_num + v.seat_row %></td>
				<td>Original Price:</td>
				<td class="orig-price">$ <%%= v.original_price / 100 %>.00</td>
				<td>Sale Price:</td>
				<td class="sale-price">$ <%%= v.price / 100 %>.00</td>
				<td class="add-to-cart" id="<%%= v.id %>"><i class="fa fa-shopping-cart"></i>Add to cart</td>
			</tr>
		<%% }); %>
		</table>
	<%% }); %>
	
	<a id="trigger-clear" class="close-reveal-modal">&#215;</a>
</script>

<div id="modal" class="reveal-modal" data-reveal></div>
