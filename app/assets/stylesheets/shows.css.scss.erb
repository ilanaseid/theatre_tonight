@font-face {
	font-family: idealist;
	src: url('<%= asset_path('idealist_light.otf') %>');
}

@font-face {
	font-family: osmedium;
	src: url('<%= asset_path('os_medium.otf') %>');
}

h3 { margin: 0; padding: 0; }

.logo {
	height: 60px;
}

.top-padding {
	padding-top: 60px;
}

.show-item {
	.show-box {
		cursor: pointer;
		height: 200px;
		overflow: hidden;
		.content {
			float: right;
			margin: 5px;
			height: 190px;
			width: 180px;
			padding: 5px 10px 5px 10px;
			background-color: rgba(255, 255, 255, 0.8);
			img { height: 100px; }
			h3 {
				font-size: 16px;
				line-height: 30px;
				margin: 3px 0 0 0;
				font-family: 'idealist';
				border-bottom: solid 1px gray;
				margin-bottom: 10px;
			}
			p { margin: 0; font-size: 14px; line-height: 16px; }
		}
	}
}