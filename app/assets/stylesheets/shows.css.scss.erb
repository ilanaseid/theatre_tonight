@font-face {
	font-family: idealist;
	src: url('<%= asset_path('idealist_light.otf') %>');
}

@font-face {
	font-family: osmedium;
	src: url('<%= asset_path('os_medium.otf') %>');
}

h3 { margin: 0; padding: 0; }

.logo {
	height: 35px;
}

.top-padding {
	padding-top: 60px;
}

.show-item {
	div {
		cursor: pointer;
		height: 200px;
		img { height: 100px; }
		h3 {
			font-size: 28px;
			line-height: 20px;
			margin: 10px 0 3px 0;
			font-family: 'osmedium';
		}
		p { margin: 0; }
	}
}